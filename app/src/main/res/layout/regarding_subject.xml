<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".VideoFragment"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edit_text"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- TableLayout for subjects -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:layout_marginTop="16dp">

                    <!-- Mathematics -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                    android:layout_marginBottom="10dp"> <!-- Space below this TableRow -->

                    <Button
                        android:id="@+id/regardingSubject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="@color/lavender"
                        android:padding="12dp"
                        android:text="@string/regardingSub"
                        android:drawablePadding="8dp"
                        app:cornerRadius="20dp" />

                </TableRow>

                <!-- Science -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                android:layout_marginBottom="10dp"> <!-- Space below this TableRow -->

                <Button
                    android:id="@+id/extraCourse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text"
                    android:backgroundTint="@color/lavender"
                    android:padding="12dp"
                    android:text="@string/extraCourse"
                    android:drawablePadding="8dp"
                    app:cornerRadius="20dp" />

            </TableRow>

            </TableLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
