<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/pagebkg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edit_text"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/uploadDocuments"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="36sp"
                android:textStyle="bold" />

            <!-- TableLayout for documents -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginTop="16dp">

                <!-- Marksheet XII -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="@color/lavender"
                        android:text="@string/MarksheetXII"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/uploadMarksheetXII"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/custom_edit_text"
                        android:text="Upload"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:backgroundTint="@color/lavender"
                        app:cornerRadius="20dp" />

                </TableRow>

                <!-- Marksheet XI -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/custom_edit_text"
                        android:backgroundTint="@color/lavender"
                        android:text="@string/MarksheetXI"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/uploadMarksheetXI"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/custom_edit_text"
                        android:text="Upload"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:backgroundTint="@color/lavender"
                        />

                </TableRow>

            </TableLayout>

            <!-- Horizontal LinearLayout for buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lavender"
                    android:text="@string/reset"
                    android:textSize="16sp"
                    android:padding="12dp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lavender"
                    android:text="@string/next"
                    android:textSize="16sp"
                    android:padding="12dp"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
